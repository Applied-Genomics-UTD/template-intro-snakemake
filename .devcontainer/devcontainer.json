{
    "name": "Intro to Snakemake",
    "build": {
        "context": "..",
        "dockerfile": "../Dockerfile"
    },
    "postCreateCommand": "mamba init",
    "postStartCommand": "mamba activate snakemake-tutorial",
    "customizations": {
        "vscode": {
            "extensions": [
                "tfehlmann.snakefmt",
                "snakemake.snakemake-lang",
                "GitHub.copilot",
                "GitHub.copilot-chat",
                "ms-vscode-remote.remote-containers"
            ]
        }
    }
}
